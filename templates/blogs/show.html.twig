{% extends 'base.html.twig' %}

{% block title %}Blogs{% endblock %}

{% block body %}
    <h1>Blogs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog.content }}</td>
            </tr>
            <tr>
                <th>Pictures</th>
                <td>{{ blog.pictures ? blog.pictures|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ blog.views }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ blog.likes }}</td>
            </tr>
            <tr>
                <th>Unlikes</th>
                <td>{{ blog.unlikes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blogs_index') }}">back to list</a>

    <a href="{{ path('app_blogs_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blogs/_delete_form.html.twig') }}
{% endblock %}
